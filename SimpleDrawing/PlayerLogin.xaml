<Window x:Class="SimpleDrawing.PlayerLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleDrawing"
        mc:Ignorable="d"
        Title="PlayerLogin" Height="450" Width="300">
    <Grid>
        <TextBox x:Name="Username" HorizontalAlignment="Center" Margin="0,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="Start" Content="Start" HorizontalAlignment="Center" Margin="0,140,0,0" VerticalAlignment="Top" Height="30" Width="42" Click="Start_Click" Background="Red" Foreground="White" AutomationProperties.HelpText="Enter Username"/>
        <Label Content="Username" Width="70" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,80,0,0"/>
    </Grid>
</Window>
